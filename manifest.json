{
  "manifest_version": 3,
  "name": "Akıllı Metin Asistanı",
  "version": "1.0.0",
  "description": "Seçili metinleri yapay zeka ile iyileştiren ve prompt'lara dönüştüren güvenli tarayıcı eklentisi",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://text.pollinations.ai/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.cohere.ai/*",
    "https://api.groq.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://text.pollinations.ai https://api.openai.com https://api.anthropic.com https://generativelanguage.googleapis.com https://api.cohere.ai https://api.groq.com"
  }
}
